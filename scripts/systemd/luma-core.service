[Unit]
Description=Luma Core Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/path/to/Luma/services/core-go
ExecStart=/path/to/luma-core
Restart=always
RestartSec=3
Environment=CORE_PORT=52123
Environment=AI_URL=http://127.0.0.1:8788
Environment=DB_PATH=/path/to/Luma/services/core-go/data/luma.db

[Install]
WantedBy=default.target
